<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_quiz_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_Quiz_goBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/go_back_icon" />


        <TextView
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_green_shadow_question"
            android:gravity="center"
            android:text="what is this?"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/drill"/>

        <RadioGroup
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:id="@+id/radioGroup"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="00:30"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green_gradient_radius_100"
                android:text="Drill"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_green_gradient_radius_100"
                android:text="Hammer"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_green_gradient_radius_100"
                android:text="Shoes"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_green_gradient_radius_100"
                android:text="Toy"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_green_radius_100"
            android:text="Answer"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <Button
                android:layout_marginStart="20dp"
                android:id="@+id/btn_hint"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/hint_icon"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/btn_green_radius_100"
                android:text="Skip"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct sentence: 0"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textStyle="normal"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>