<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_marginLeft="15dp"
        android:id="@+id/BtnBack"
        android:layout_marginTop="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_back"></Button>
    <TextView
        android:id="@+id/textViewCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ravenpro_medium"
        android:text="CHOOSE QUESTION"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#6ADF31"
        android:textSize="38sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_SL5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/TxtN2"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_green_gradient_radius_100"

        android:text="5"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_SL6"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/TxtN2"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_green_gradient_radius_100"
        android:text="6"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_SL7"
        android:background="@drawable/btn_green_gradient_radius_100"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:text="7"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_below="@+id/TxtN2"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_SL8"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:text="8"
        android:textSize="20dp"
        android:background="@drawable/btn_green_gradient_radius_100"
        android:textAllCaps="false"
        android:layout_below="@+id/TxtN2"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_SL9"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:text="9"
        android:textSize="20dp"
        android:background="@drawable/btn_green_gradient_radius_100"
        android:textAllCaps="false"
        android:layout_below="@+id/TxtN2"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_SL10"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:text="10"
        android:background="@drawable/btn_green_gradient_radius_100"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_below="@+id/TxtN2"
        android:layout_marginTop="20dp"
        />

</LinearLayout>

