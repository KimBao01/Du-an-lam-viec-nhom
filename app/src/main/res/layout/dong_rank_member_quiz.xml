<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.75"
                android:background="@drawable/border_radius_listitem"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/TvTop"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_cricle_ranking"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/TvName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_usename"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="QuocNguyen2002"
                android:textAllCaps="true"
                android:textColor="#75C700"
                android:textSize="20dp" />

            <TextView
                android:paddingBottom="5dp"
                android:id="@+id/TvSoCau"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:text="Số câu: 9"
                android:gravity="bottom"
                android:fontFamily="@font/ravenpro_medium"
                android:textColor="#8A817C"
                android:textSize="20dp" />
            <TextView
                android:paddingBottom="10dp"
                android:id="@+id/TvTime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thời gian : 5s"
                android:textSize="20dp"
                android:fontFamily="@font/ravenpro_medium"
                ></TextView>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout><!--    75C700-->